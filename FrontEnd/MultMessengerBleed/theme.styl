#post-page
	font-size 0
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	overflow hidden
	padding 16px 0 0 16px
	.container
		display table
		width 100%
		height 100%
		box-sizing border-box
	.receiver-wrapper, .search-wrapper
		display table-cell
		vertical-align top
		position relative
	.receiver-wrapper
		width 145px
		.section
			margin-bottom 10px
	.search-wrapper
		font-size 12px
		>.wrap
			position relative
			width 100%
			height 100%
		.search
			display table
			width 100%
			height 100%
			.search-controls, .search-results
				display table-row
			.search-controls
				height 1%
				padding-right 16px
				.query
					width 738px
					margin-bottom 6px
			.search-results
				height 99%
				position relative
				.shadow
					width 738px
					position absolute
					z-index 10
					height 6px
					background-image linear-gradient(to bottom, rgba(255, 255, 255, 1) 0%, rgba(255, 255, 255, 0) 100%)
				.wrap
					padding-top 6px
					padding-bottom 16px
					width 100%
					height 100%
					overflow auto
					position relative
.message
	display inline-block
	box-sizing border-box
	border 1px solid #ddd
	border-radius 2px
	background-color #fff
	vertical-align top
	&.normal
		cursor pointer
	&.normal:hover
		border 1px solid #888
	&.chosen
		border 1px solid aspect-color
		box-shadow 0 0 2px aspect-color
	.content
		background-color #fff
		display inline-block
		width 403px
		height 403px
		overflow hidden
		margin 10px
		font-size 16px
.button
	user-select(none)
	border 1px solid #ddd
	display inline-block
	padding 8px
	cursor pointer
	border-radius 2px
	font-size 12px
	&:hover
		border 1px solid aspect-color
		box-shadow 0 0 1px aspect-color
		color aspect-color
	&:active
		color #fff
		border 1px solid aspect-color
		background-color aspect-color
		box-shadow 0 0 2px aspect-color
		text-shadow 0 0 2px #666
.button-special
	user-select(none)
	display inline-block
	padding 8px
	cursor pointer
	border-radius 2px
	font-size 12px
	background-color aspect-color
	border 1px solid aspect-color
	text-shadow 0 0 2px #666
	color white
	&:hover
		box-shadow 0 0 2px aspect-color
	&:active
		border 1px solid active-aspect-color
		background-color active-aspect-color
		box-shadow 0 0 2px active-aspect-color
.load-holder
	text-align center
	font-size 12px
#footer
	text-align center
	position fixed
	width default-width
	bottom 0
	font-size 12px
	padding-top 6px
	padding-bottom 6px
	height 36px
	background-color #fff
	box-shadow 0 0 6px #888
	.button-special
		box-sizing border-box
		line-height 34px
		padding-top 0
		padding-bottom 0
#dialog-background
	display table
	position fixed
	top 0
	bottom 0
	left 0
	width default-width
	z-index 900
	height 100%
	background-color rgba(255, 255, 255, 0.9)
	.dialog-wrapper
		display table-cell
		vertical-align middle
		text-align center
		.dialog-window
			display inline-block
			background-color white
			border 1px solid aspect-color
			box-shadow 0 0 5px aspect-color
			border-radius 2px
			&.error
				box-shadow 0 0 5px #f00 !important
				border 1px solid #f00 !important
				.button
					&:hover
						border 1px solid #f00 !important
						box-shadow 0 0 1px #f00 !important
						color #f00 !important
					&:active
						background-color #f00 !important
						border 1px solid #f00 !important
						box-shadow 0 0 1px solid #f00 !important
						color white !important
			.title-holder
				height 36px
				font-weight bold
				line-height 36px
				color #333
				font-size 14px
				border-bottom 1px solid #ddd
			.controls-holder
				width 100%
				padding 0 2px 0 2px
				display table
				box-sizing border-box
				border-spacing 6px 0
				table-layout fixed
				.button
					display table-cell
