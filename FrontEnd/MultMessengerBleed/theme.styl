aspect-color = #28f
active-aspect-color = #26d
default-font-color = #666
default-width = 920px

user-select(value)
	-webkit-user-select value
	user-select value

*
	outline 0
html, body
	position absolute
	top 0
	bottom 0
	left 0
	right 0
	margin 0
	padding 0
	display block
	font-family 'Open Sans', Verdana
	color default-font-color
	background-color #fff
	text-rendering optimizeLegibility
	overflow-x hidden
::-webkit-scrollbar
	width 8px
	height 8px
	margin 0 auto
::-webkit-scrollbar-thumb
	background-color #ddd
.hidden
	display none !important
#menu
	user-select(none)
	position fixed
	top 0
	font-size 12px
	width 920px
	box-sizing border-box
	padding-left 12px
	padding-right 12px
	height 36px
	line-height 36px
	vertical-align middle
	z-index 10
	background-color #fff
	box-shadow 0 0 6px #888
#menu-container
	vertical-align top
	position relative
	text-align center
	width 100%
#logo
	position absolute
	left 0
	font-size 14px !important
	font-weight bold
	color #333
	cursor pointer
	&:hover
		color aspect-color
#logo, #breadcrumbs
	display inline-block
#logo-pic
	top 3px
	width 22px
	height 16px
	border-radius 4px
	background-color aspect-color
	position relative
	display inline-block
	&:after
		content ""
		position absolute
		top 16px
		left 4px
		border-top 5px solid aspect-color
		border-right 5px solid transparent
#arrow
	position absolute
	top 3px
	left 8px
	display inline-block
	width 0
	background-color #fff
	border-left 8px solid #fff
	border-top 5px solid aspect-color
	border-bottom 5px solid aspect-color
#big-logo-pic
	top 4px
	width 44px
	height 32px
	border-radius 8px
	background-color aspect-color
	position relative
	display inline-block
	&:after
		content ""
		position absolute
		top 32px
		left 8px
		border-top 10px solid aspect-color
		border-right 10px solid transparent
#big-arrow
	position absolute
	top 6px
	left 16px
	display inline-block
	width 0
	background-color white
	border-left 16px solid #fff
	border-top 10px solid aspect-color
	border-bottom 10px solid aspect-color
#breadcrumbs
	display inline-block
	font-size 0
	.chosen
		color #fff
		background-color aspect-color
		text-shadow 0 0 2px #666
	.normal
		&:hover
			color aspect-color !important
#status
	position absolute
	right 0
	display inline-block
#online
	color white
	border-radius 2px
	background-color #55bb55
	border 1px solid #55bb55
	height 16px
	line-height 16px
	padding 4px 8px 4px 8px
	margin-top 5px
	display inline-block
	margin-left 3px
	&.invalid
		background-color #f00 !important
		border 1px solid #f00
#disconnect
	line-height 16px
	padding 4px 8px 4px 8px
#select, #edit, #post
	font-size 12px
	cursor pointer
	display: inline-block
	padding-right 12px
	padding-left 12px
	position relative
	//&.chosen:before
	//	content ""
	//	top 0
	//	left 0
	//	position absolute
	//	margin-left -12px
	//	border-left 12px solid transparent
	//	border-top 18px solid aspect-color
	//	border-bottom 18px solid aspect-color
	&.chosen:after
		content ""
		top 0
		right 0
		margin-right -12px
		position absolute
		border-left 12px solid aspect-color
		border-top 18px solid transparent
		border-bottom 18px solid transparent
#edit, #post
	margin-left 12px
#page
	box-sizing border-box
	overflow-y auto
	display block
	position absolute
	top 36px
	bottom 48px
	width 100%
#page-container
	font-size 0 !important
	margin 0 auto
	height 100%
	position relative
#answer-page
	padding 8px
