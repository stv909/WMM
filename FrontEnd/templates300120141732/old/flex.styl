html, body
  width 100%
  height 100%
  margin 0
  padding 0
  font-family Helvetica
*
  outline none
#wrapper
  position relative
  height 100%
  width 40em
  margin 0 auto
#container
  display table
  width 100%
  height 100%
  border-left 1px solid #DDDDDD
  border-right 1px solid #DDDDDD
#head, #content, #foot
  display table-row
#head
  border-bottom 1px solid #DDDDDD
  height 2em
  max-height 5em
  background-color #fffcd0
  >div
    padding-top 0.5em
    padding-bottom 0.5em
    text-align center
    max-height 5em
    border-bottom 1px solid #DDDDDD
    overflow auto
#foot
  height 5em
  max-height 10em
  background-color #ebf2ff
  >div
    padding-top 0.5em
    padding-bottom 0.5em
    text-align center
    max-height 10em
    border-top 1px solid #DDDDDD
    overflow auto
#content
  >div
    overflow auto
    max-height 100%
    height 100%
